<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:ignore="MissingDefaultResource">

    <!-- TextView para mostrar la expresión ingresada -->
    <TextView
        android:id="@+id/inputText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:text=""
        android:textSize="16sp"
        android:background="#CFD8DC"
        android:textColor="#37474F"
        android:gravity="end"
        android:ellipsize="end"
        android:maxLines="1" />

    <!-- TextView para mostrar el resultado -->
    <TextView
        android:id="@+id/resultText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:text="0"
        android:textSize="16sp"
        android:background="#B0BEC5"
        android:textColor="#000000"
        android:gravity="end"
        android:ellipsize="end"
        android:maxLines="1"
        tools:ignore="HardcodedText" />

    <!-- GridLayout para los botones -->
    <GridLayout
        android:id="@+id/calculator_layout_land"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="6"
        android:orientation="horizontal"
        android:padding="10dp"
        android:rowCount="5">

        <Button
            android:id="@+id/buttonClearLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#F80808"
            android:text="C"
            android:textColor="#F7F8F8"
            android:textSize="18sp"
            tools:ignore="HardcodedText,TextContrastCheck" />

        <Button
            android:id="@+id/buttonExponentLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#555656"
            android:textColor="#F7F8F8"
            android:text="e"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonSquareLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#555656"
            android:textColor="#F7F8F8"
            android:text="x²"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/buttonSquareRootLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#555656"
            android:textColor="#F7F8F8"
            android:text="√"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonCubeRootLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#555656"
            android:textColor="#F7F8F8"
            android:text="∛"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonPiLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#555656"
            android:textColor="#F7F8F8"
            android:text="π"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/buttonSinLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#555656"
            android:textColor="#F7F8F8"
            android:text="sin"
            android:textSize="20sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn7Land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#434385"
            android:textColor="#F7F8F8"
            android:text="7"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn8Land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#434385"
            android:textColor="#F7F8F8"
            android:text="8"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn9Land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#434385"
            android:textColor="#F7F8F8"
            android:text="9"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnPercentLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#555656"
            android:textColor="#F7F8F8"
            android:text="%"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnParenthesisLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#555656"
            android:textColor="#F7F8F8"
            android:text="( )"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/buttonTanLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#555656"
            android:textColor="#F7F8F8"
            android:text="tan"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />
        <Button
            android:id="@+id/btn4Land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#434385"
            android:textColor="#F7F8F8"
            android:text="4"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn5Land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#434385"
            android:textColor="#F7F8F8"
            android:text="5"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn6Land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#434385"
            android:textColor="#F7F8F8"
            android:text="6"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnDivideLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#555656"
            android:textColor="#F7F8F8"
            android:text="/"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnMultiplyLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#555656"
            android:textColor="#F7F8F8"
            android:text="*"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonCosLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#555656"
            android:textColor="#F7F8F8"
            android:text="cos"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn1Land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#434385"
            android:textColor="#F7F8F8"
            android:text="1"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn2Land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#434385"
            android:textColor="#F7F8F8"
            android:text="2"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn3Land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#434385"
            android:textColor="#F7F8F8"
            android:text="3"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnMinusLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#555656"
            android:textColor="#F7F8F8"
            android:text="-"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btnPlusLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#555656"
            android:textColor="#F7F8F8"
            android:text="+"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonLogLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#555656"
            android:textColor="#F7F8F8"
            android:text="log"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonRadLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#555656"
            android:textColor="#F7F8F8"
            android:text="Rad"
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn0Land"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#434385"
            android:text="0"
            android:textColor="#F7F8F8"
            android:textSize="18sp"
            tools:ignore="HardcodedText,DuplicateSpeakableTextCheck" />

        <Button
            android:id="@+id/btnDotLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#555656"
            android:textColor="#F7F8F8"
            android:text="."
            android:textSize="18sp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/buttonEqualsLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowSpan="2"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#2E7CE2"
            android:text="="
            android:textColor="#F7F8F8"
            android:textSize="18sp"
            tools:ignore="HardcodedText,TextContrastCheck" />
        <Button
            android:id="@+id/btnDeleteLand"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="5"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:backgroundTint="#E69264"
            android:textColor="#121212"
            android:text="⌫"
            android:textSize="18sp"
            tools:ignore="HardcodedText"/>

    </GridLayout>
</LinearLayout>
